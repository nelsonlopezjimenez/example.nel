// use DCM enabler callback
if (Enabler.isInitialized()) {
	politeLoad();
} else {
	Enabler.addEventListener(studio.events.StudioEvent.INIT, politeLoad);
}

// Runs when Enabler is ready.
function initEnabler() {
	if (Enabler.isPageLoaded()) {

		// Ads are rendered offscreen in mobile apps so animation should wait for
		// the visible event. These are simulated with delays in the local
		// environment.
		if (!Enabler.isVisible()) {
		  Enabler.addEventListener(studio.events.StudioEvent.VISIBLE, politeLoad);
		} else {
		  politeLoad();
		}

	} else {
		Enabler.addEventListener(studio.events.StudioEvent.PAGE_LOADED, politeLoad);
	}
};